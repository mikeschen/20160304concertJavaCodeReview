<h1>Concert Finder</h1>
<img src="/img/concert.jpg" alt="mainImage">
<br>
<!-- FORM TO ADD BAND -->
<form action="/band/new" method="post" class="form-inline">
	<div class="form-group">
		<input id="bandName" name="bandName" type="text" class="form-control" placeholder="Band Name" required>
		<button type="submit" class="btn btn-success">Add Band</button>
	</div>
</form>
<br>
<!-- FORM TO ADD VENUE -->
<form action="/venue/new" method="post" class="form-inline">
	<div class="form-group">
		<input id="venueName" name="venueName" type="text" class="form-control" placeholder="Venue Name" required>
		<button type="submit" class="btn btn-info">Add Venue</button>
	</div>
</form>
<hr>
<h2>Bands List</h2>
	<ul>
	#foreach ($band in $bands)
		<li><a href="/band/$band.getId()">$band.getName()</a><h5>Click to Add Venues Played</h5></li>
		<form action="/update/band/$band.getId()" method="get">
	    <input id="bandId" name="bandId" type="hidden" value="$band.getId()">
	    <button type="submit" id="$band.getId()" class="btn btn-warning">Update Name</button>
	  </form>
	  <form action="/delete/band/$band.getId()" method="post">
	    <input id="bandId" name="bandId" type="hidden" value="$band.getId()">
	    <button type="submit" id="$band.getId()" class="btn btn-danger">Delete Band</button>
	  </form></li>
	#end
	</ul>
<hr>
<h2>Venues List</h2>
<ul>
#foreach ($venue in $venues)
	<li>$venue.getName()</li>
#end
</ul>
